<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="コピー先チューナー選択画面" Height="180" Width="280">

    <StackPanel>
        <ListView Name="livTuners" SelectedItem="{Binding}" Margin="10" Height="80">
            <ListViewItem Content="{Binding TunerName}" />
        </ListView>
        <Button Name="btnSelected" Content="選択" HorizontalAlignment="Center" Width="60" />
    </StackPanel>
</Window>
